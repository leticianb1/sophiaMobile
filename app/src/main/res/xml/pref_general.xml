<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SwitchPreference
        android:key="@string/pref_on_key"
        android:title="@string/pref_on_label"
        android:defaultValue="@string/pref_on_default" />

    <ListPreference
        android:title="@string/pref_time_label"
        android:key="@string/pref_time_key"
        android:defaultValue="@string/pref_time_default"
        android:entryValues="@array/pref_time_values"
        android:entries="@array/pref_time_options" />


</PreferenceScreen>